<!DOCTYPE HTML>
<html lang="fr">
    <head>
        <meta charset="utf-8"/>
        {% image '@FilmsBundle/Resources/public/img/favicon.ico' %}
            <link rel="icon" type="image/ico" href="{{ asset_url }}"/>
        {% endimage %}
        <title>Test - Développement front-end</title>
        {% block stylesheets %}
            {% stylesheets '@FilmsBundle/Resources/public/css/styles.css' %}
                <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
            {% endstylesheets %}
        {% endblock %}
        {% block javascripts %}
            {% javascripts '@FilmsBundle/Resources/public/bundles/fosjsrouting/js/router.js' %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
            <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
        {% endblock %}
    </head>
    <body id="body" onload="{% block fonctions %}{% endblock %}">
        {% image '@FilmsBundle/Resources/public/img/banniere.png' %}
            <img id="banniere" src="{{ asset_url }}" alt="Bannière"/>
        {% endimage %}
        {% block contenu %}{% endblock %}
    </body>
</html>